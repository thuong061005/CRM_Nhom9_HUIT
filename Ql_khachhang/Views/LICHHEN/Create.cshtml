@model Ql_khachhang.Models.LICH_HEN

@{
    ViewBag.Title = "Thêm Lịch hẹn";
}

<div class="mb-4">
    <a href="@Url.Action("Index")" class="text-decoration-none text-muted small">
        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
    </a>
    <h2 class="fw-bold text-primary mt-2">Tạo lịch hẹn mới</h2>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0">
            <div class="card-body p-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Mã lịch hẹn (Tự động)</label>
                            @Html.EditorFor(model => model.MALICH, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control bg-light",
                                    @readonly = "readonly" 
                                }
                            })
                            @Html.ValidationMessageFor(model => model.MALICH, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ngày giờ hẹn</label>
                            @Html.EditorFor(model => model.NGAYGIO, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                            @Html.ValidationMessageFor(model => model.NGAYGIO, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-12">
                            <label class="form-label fw-bold">Khách hàng</label>
                            @Html.DropDownList("MAKH", null, "-- Chọn khách hàng --", htmlAttributes: new { @class = "form-select", @required = "required" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Nhân viên thực hiện</label>
                            @Html.DropDownList("MANV", null, "-- Chọn nhân viên --", htmlAttributes: new { @class = "form-select", @required = "required" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Dịch vụ</label>
                            @Html.DropDownList("MADV", null, "-- Chọn dịch vụ --", htmlAttributes: new { @class = "form-select", @required = "required" })
                        </div>

                        <div class="col-md-12">
                            <label class="form-label fw-bold">Trạng thái</label>
                            @Html.DropDownListFor(model => model.TRANGTHAI, new SelectList(new[] { "Chờ xác nhận", "Đã xác nhận", "Đã hoàn thành", "Hủy" }), new { @class = "form-select" })
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <button type="reset" class="btn btn-light me-2">Làm mới</button>
                        <button type="submit" class="btn btn-primary px-4">Lưu lịch hẹn</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
