@model Ql_khachhang.Models.NHAN_VIEN

@{
    ViewBag.Title = "Edit";
}


<div class="container-fluid">

    <!-- TIÊU ĐỀ -->
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-user-edit fa-2x text-primary me-3"></i>
        <div>
            <h3 class="mb-0 fw-bold text-primary">Chỉnh sửa thông tin nhân viên</h3>
            <small class="text-muted">Cập nhật hồ sơ và thông tin làm việc</small>
        </div>
    </div>

    <!-- CARD -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MANV)

                <div class="row g-4">

                    <!-- HỌ TÊN -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-user me-1"></i> Họ tên
                        </label>
                        @Html.TextBoxFor(m => m.HOTEN, new { @class = "form-control", placeholder = "Nhập họ tên nhân viên" })
                        @Html.ValidationMessageFor(m => m.HOTEN, "", new { @class = "text-danger small" })
                    </div>

                    <!-- CHỨC VỤ -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-briefcase me-1"></i> Chức vụ
                        </label>
                        @Html.TextBoxFor(m => m.CHUCVU, new { @class = "form-control", placeholder = "Nhập chức vụ" })
                        @Html.ValidationMessageFor(m => m.CHUCVU, "", new { @class = "text-danger small" })
                    </div>

                    <!-- LƯƠNG -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-money-bill-wave me-1"></i> Lương (VNĐ)
                        </label>
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.LUONG, new { @class = "form-control", type = "number", step = "1000" })
                            <span class="input-group-text">₫</span>
                        </div>
                        @Html.ValidationMessageFor(m => m.LUONG, "", new { @class = "text-danger small" })
                    </div>

                    <!-- CHI NHÁNH -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-building me-1"></i> Chi nhánh
                        </label>
                        @Html.DropDownList(
                            "MACHINHANH",
                            null,
                            "-- Chọn chi nhánh --",
                            new { @class = "form-select" }
                        )
                        @Html.ValidationMessageFor(m => m.MACHINHANH, "", new { @class = "text-danger small" })
                    </div>

                </div>

                <!-- BUTTON -->
                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            }
        </div>
    </div>
</div>
