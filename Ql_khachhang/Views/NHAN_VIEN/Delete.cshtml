@model Ql_khachhang.Models.NHAN_VIEN

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid">

    <!-- TIÊU ĐỀ -->
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-user-times fa-2x text-danger me-3"></i>
        <div>
            <h3 class="mb-0 fw-bold text-danger">Xác nhận xóa nhân viên</h3>
            <small class="text-muted">
                Hành động này không thể hoàn tác
            </small>
        </div>
    </div>

    <!-- CẢNH BÁO -->
    <div class="alert alert-danger d-flex align-items-center rounded-3">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Bạn có chắc chắn muốn xóa nhân viên này không?</strong>
    </div>

    <!-- CARD THÔNG TIN -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <h5 class="fw-bold mb-3 text-secondary">
                <i class="fas fa-id-card me-1"></i> Thông tin nhân viên
            </h5>

            <div class="row g-3">

                <div class="col-md-6">
                    <div class="text-muted small">Họ tên</div>
                    <div class="fw-semibold fs-6">@Model.HOTEN</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Chức vụ</div>
                    <div class="fw-semibold fs-6">@Model.CHUCVU</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Lương</div>
                    <div class="fw-semibold fs-6 text-success">
                        @String.Format("{0:N0} ₫", Model.LUONG)
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Chi nhánh</div>
                    <span class="badge bg-primary fs-6 px-3 py-2">
                        @Model.CHI_NHANH.TENCHINHANH
                    </span>
                </div>

            </div>

            <!-- BUTTON -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-1"></i> Xóa nhân viên
                    </button>
                </div>
            }

        </div>
    </div>
</div>