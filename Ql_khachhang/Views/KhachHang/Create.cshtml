@model Ql_khachhang.Models.KHACH_HANG

@{
    ViewBag.Title = "Thêm Khách hàng";
}

<div class="mb-4">
    <a href="@Url.Action("Index")" class="text-decoration-none text-muted small">
        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
    </a>
    <h2 class="fw-bold text-primary mt-2">Thêm khách hàng mới</h2>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0">
            <div class="card-body p-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @* Hiển thị thông báo lỗi từ Server *@
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Mã khách hàng</label>
                            @Html.EditorFor(model => model.MAKH, new { htmlAttributes = new { @class = "form-control bg-light", @readonly = "readonly" } })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Họ và tên</label>
                            @Html.EditorFor(model => model.HOTEN, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên khách hàng", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", placeholder = "090...", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", placeholder = "example@mail.com", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Loại khách hàng</label>
                            @Html.EditorFor(model => model.LOAIKH, new { htmlAttributes = new { @class = "form-control bg-light", @readonly = "readonly" } })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Điểm tích lũy</label>
                            @Html.EditorFor(model => model.DIEMTICHLUY, new { htmlAttributes = new { @class = "form-control", @type = "number", @readonly = "readonly" } })
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <button type="reset" class="btn btn-light me-2">Làm mới</button>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">
                            <i class="fas fa-save me-2"></i>Lưu khách hàng
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
