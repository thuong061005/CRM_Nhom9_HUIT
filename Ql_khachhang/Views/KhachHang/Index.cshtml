    @model IEnumerable<Ql_khachhang.Models.KHACH_HANG>
    @{ ViewBag.Title = "Khách hàng"; }

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 fw-bold">Quản lý khách hàng</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary shadow-sm">
            <i class="fas fa-user-plus me-2"></i>Thêm khách hàng
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

<div class="card shadow border-0 mb-4">
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-3" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã KH</th>
                        <th>Họ tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Loại KH</th>
                        <th>Điểm</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@item.MAKH</td>
                            <td>@item.HOTEN</td>
                            <td>@item.SDT</td>
                            <td>@item.EMAIL</td>
                            <td>
                                @{
                                    var cls = item.LOAIKH == "Thân thiết" ? "bg-success" :
                                              (item.LOAIKH == "Tiềm năng" ? "bg-info text-dark" : "bg-secondary");
                                }
                                <span class="badge @cls">@item.LOAIKH</span>
                            </td>
                            <td>@item.DIEMTICHLUY</td>
                            <td class="text-center">
                                <a href="@Url.Action("UpdateRank", new { id = item.MAKH })" class="btn btn-sm btn-outline-warning" title="Cập nhật thứ hạng">
                                    <i class="fas fa-sync-alt"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.MAKH })" class="btn btn-sm btn-outline-primary border-0"><i class="fas fa-edit"></i></a>
                                <a href="@Url.Action("Delete", new { id = item.MAKH })" class="btn btn-sm btn-outline-danger border-0" onclick="return confirm('Xóa khách hàng này?')"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
