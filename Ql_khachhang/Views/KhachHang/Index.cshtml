@model IEnumerable<Ql_khachhang.Models.LICH_HEN>

@{
    ViewBag.Title = "Quản lý Lịch hẹn";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 fw-bold">Danh sách Lịch hẹn</h1>
    <a href="@Url.Action("Create")" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50 me-2"></i> Thêm lịch hẹn mới
    </a>
</div>

<div class="card shadow mb-4 border-0">
    <div class="card-header py-3 bg-white">
        <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-table me-2"></i>Dữ liệu lịch hẹn</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Mã lịch</th>
                        <th>Ngày giờ</th>
                        <th>Khách hàng</th>
                        <th>Nhân viên</th>
                        <th>Dịch vụ</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@item.MALICH</td>
                            <td>@item.NGAYGIO.ToString("HH:mm dd/MM/yyyy")</td>

                            @* Sử dụng ?. và ?? để tránh lỗi NullReference *@
                            <td>@(item.KHACH_HANG?.HOTEN ?? "Khách không tồn tại")</td>
                            <td>@(item.NHAN_VIEN?.HOTEN ?? "Chưa phân công")</td>
                            <td>@(item.DICH_VU?.TENDV ?? "Dịch vụ đã xóa")</td>

                            <td>
                                @{
                                    var badgeClass = "bg-secondary";
                                    var status = item.TRANGTHAI ?? "Chưa rõ"; // Phòng trường hợp trạng thái null

                                    if (status == "Đã xác nhận") { badgeClass = "bg-info text-dark"; }
                                    else if (status == "Đã hoàn thành") { badgeClass = "bg-success"; }
                                    else if (status == "Hủy") { badgeClass = "bg-danger"; }
                                    else if (status == "Chờ xác nhận") { badgeClass = "bg-warning text-dark"; }
                                }
                                <span class="badge @badgeClass">@status</span>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.MALICH })" class="btn btn-sm btn-outline-primary border-0" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.MALICH })" class="btn btn-sm btn-outline-danger border-0" onclick="return confirm('Xác nhận xóa lịch hẹn này?')" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
