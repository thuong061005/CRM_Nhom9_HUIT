@model Ql_khachhang.Models.LICH_HEN

@{
    ViewBag.Title = "Chỉnh sửa Lịch hẹn";
}

<div class="mb-4">
    <a href="@Url.Action("Index")" class="text-decoration-none text-muted small">
        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
    </a>
    <div class="d-flex align-items-center mt-2">
        <h2 class="fw-bold text-primary mb-0">Chỉnh sửa lịch hẹn</h2>
        <span class="ms-3 badge bg-light text-primary border">ID: @Model.MALICH</span>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết lịch hẹn</h6>
            </div>
            <div class="card-body p-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    @* Quan trọng: Cần giữ lại Primary Key trong HiddenField *@
                    @Html.HiddenFor(model => model.MALICH)

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ngày giờ hẹn</label>
                            @* Định dạng lại datetime để hiển thị đúng trong input *@
                            <input type="datetime-local" name="NGAYGIO" class="form-control"
                                   value="@Model.NGAYGIO.ToString("yyyy-MM-ddTHH:mm")" />
                            @Html.ValidationMessageFor(model => model.NGAYGIO, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Trạng thái</label>
                            @Html.DropDownListFor(model => model.TRANGTHAI,
                                new SelectList(new[] { "Chờ xác nhận", "Đã xác nhận", "Đã hoàn thành", "Hủy" }),
                                new { @class = "form-select" })
                        </div>

                        <div class="col-md-12">
                            <label class="form-label fw-bold">Khách hàng</label>
                            @Html.DropDownList("MAKH", null, htmlAttributes: new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.MAKH, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Nhân viên thực hiện</label>
                            @Html.DropDownList("MANV", null, htmlAttributes: new { @class = "form-select", @required = "required" })
                            @Html.ValidationMessageFor(model => model.MANV, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Dịch vụ</label>
                            @Html.DropDownList("MADV", null, htmlAttributes: new { @class = "form-select", @required = "required" })
                            @Html.ValidationMessageFor(model => model.MADV, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top d-flex justify-content-between">
                        <button type="button" class="btn btn-outline-danger" onclick="location.href='@Url.Action("Index")'">
                            Hủy bỏ
                        </button>
                        <button type="submit" class="btn btn-primary px-5 shadow-sm">
                            <i class="fas fa-save me-2"></i>Cập nhật thay đổi
                        </button>
                    </div>
                }
            </div>
        </div>

        @* Card phụ hiển thị thông báo lưu ý *@
        <div class="alert alert-info mt-4 border-0 shadow-sm">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Lưu ý:</strong> Khi thay đổi nhân viên hoặc thời gian, hệ thống sẽ tự động kiểm tra lại xung đột lịch làm việc.
        </div>
    </div>
</div>
