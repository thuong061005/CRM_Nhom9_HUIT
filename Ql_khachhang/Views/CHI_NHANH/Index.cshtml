@model IEnumerable<Ql_khachhang.Models.CHI_NHANH>

@{
    ViewBag.Title = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="text-primary fw-bold">
        <i class="fas fa-building me-2"></i> Danh sách chi nhánh
    </h3>

    <a href="@Url.Action("Create")" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus me-1"></i> Thêm chi nhánh
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>TÊN CHI NHÁNH</th>
                    <th>ĐỊA CHỈ</th>
                    <th>SỐ ĐIỆN THOẠI</th>
                    <th class="text-center">THAO TÁC</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.TENCHINHANH</td>
                        <td>@item.DIACHI</td>
                        <td>@item.SDT</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = item.MACHINHANH })"
                               class="btn btn-sm btn-warning me-1">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a href="@Url.Action("Details", new { id = item.MACHINHANH })"
                               class="btn btn-sm btn-info me-1 text-white">
                                <i class="fas fa-eye"></i>
                            </a>

                            <a href="@Url.Action("Delete", new { id = item.MACHINHANH })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bạn có chắc muốn xóa chi nhánh này?');">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>