@model Ql_khachhang.Models.CHI_NHANH

@{
    ViewBag.Title = "Chi tiết chi nhánh";
}

<div class="container-fluid">

    <!-- TIÊU ĐỀ -->
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-building fa-2x text-primary me-3"></i>
        <div>
            <h3 class="mb-0 fw-bold text-primary">Chi tiết chi nhánh</h3>
            <small class="text-muted">Thông tin và nhân viên thuộc chi nhánh</small>
        </div>
    </div>

    <!-- CARD THÔNG TIN CHI NHÁNH -->
    <div class="card shadow-sm border-0 rounded-4 mb-4">
        <div class="card-body p-4">

            <h5 class="fw-bold mb-3 text-secondary">
                <i class="fas fa-info-circle me-2"></i> Thông tin chi nhánh
            </h5>

            <table class="table table-borderless">
                <tr>
                    <th style="width:200px;">Tên chi nhánh:</th>
                    <td>@Model.TENCHINHANH</td>
                </tr>
                <tr>
                    <th>Địa chỉ:</th>
                    <td>@Model.DIACHI</td>
                </tr>
                <tr>
                    <th>Số điện thoại:</th>
                    <td>@Model.SDT</td>
                </tr>
            </table>

            <div class="mt-3">
                <a href="@Url.Action("Edit", new { id = Model.MACHINHANH })"
                   class="btn btn-warning me-2">
                    <i class="fas fa-edit me-1"></i> Chỉnh sửa
                </a>

                <a href="@Url.Action("Index")"
                   class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- DANH SÁCH NHÂN VIÊN -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <h5 class="fw-bold mb-3 text-secondary">
                <i class="fas fa-users me-2"></i>
                Nhân viên thuộc chi nhánh
                <span class="badge bg-primary ms-2">
                    @(Model.NHAN_VIEN?.Count() ?? 0)
                </span>
            </h5>

            @if (Model.NHAN_VIEN != null && Model.NHAN_VIEN.Any())
            {
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã NV</th>
                            <th>Họ tên</th>
                            <th>Chức vụ</th>
                            <th class="text-end">Lương</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var nv in Model.NHAN_VIEN)
                        {
                            <tr>
                                <td>@nv.MANV</td>
                                <td>@nv.HOTEN</td>
                                <td>@nv.CHUCVU</td>
                                <td class="text-end">
                                    @String.Format("{0:N0} ₫", nv.LUONG)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Chi nhánh này hiện chưa có nhân viên.
                </div>
            }
        </div>
    </div>
</div>
