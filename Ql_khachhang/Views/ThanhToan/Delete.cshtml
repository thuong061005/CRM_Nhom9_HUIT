@model THANHTOAN.Models.THANH_TOAN

@{
    ViewBag.Title = "Xác nhận xóa thanh toán";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> Xác nhận xóa</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Bạn có chắc chắn muốn xóa thông tin thanh toán này không? Hành động này không thể hoàn tác.</p>

                    <div class="alert alert-light border">
                        <ul class="list-unstyled mb-0">
                            <li><strong>Mã thanh toán:</strong> @Model.MATT</li>
                            <li><strong>Khách hàng:</strong> @(Model.KHACH_HANG?.HOTEN ?? "N/A")</li>
                            <li><strong>Tổng tiền:</strong> @Model.TONGTIEN.ToString("N0") VNĐ</li>
                            <li><strong>Ngày TT:</strong> @Model.NGAYTT.ToString("dd/MM/yyyy")</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.MATT)

                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
                            </button>

                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2 px-4">
                                <i class="fas fa-times me-1"></i> Hủy bỏ
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>