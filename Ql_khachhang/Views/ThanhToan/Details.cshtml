@model THANHTOAN.Models.THANH_TOAN

@{
    ViewBag.Title = "Chi tiết thanh toán";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-file-invoice-dollar me-2"></i>
                        CHI TIẾT GIAO DỊCH - KH: @(Model.KHACH_HANG != null ? Model.KHACH_HANG.HOTEN : "N/A")
                    </h5>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-3 pb-2 border-bottom">
                        <div class="col-sm-4 text-muted fw-bold">
                            <i class="fas fa-user me-2 text-primary"></i> Khách hàng
                        </div>
                        <div class="col-sm-8 fw-bold text-dark">
                            @(Model.KHACH_HANG?.HOTEN ?? "N/A")
                        </div>
                    </div>

                    <div class="row mb-3 pb-2 border-bottom">
                        <div class="col-sm-4 text-muted fw-bold">
                            <i class="fas fa-calendar-alt me-2 text-primary"></i> Ngày giao dịch
                        </div>
                        <div class="col-sm-8">
                            @Model.NGAYTT.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <div class="row mb-3 pb-2 border-bottom">
                        <div class="col-sm-4 text-muted fw-bold">
                            <i class="fas fa-coins me-2 text-primary"></i> Tổng tiền
                        </div>
                        <div class="col-sm-8 fs-5 text-danger fw-bold">
                            @Model.TONGTIEN.ToString("N0") <small>VNĐ</small>
                        </div>
                    </div>

                    <div class="row mb-3 pb-2 border-bottom">
                        <div class="col-sm-4 text-muted fw-bold">
                            <i class="fas fa-credit-card me-2 text-primary"></i> Phương thức
                        </div>
                        <div class="col-sm-8">
                            <span class="badge bg-light text-dark border p-2">
                                @Model.PHUONGTHUC
                            </span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">
                            <i class="fas fa-tag me-2 text-primary"></i> Khuyến mãi
                        </div>
                        <div class="col-sm-8">
                            @(Model.KHUYEN_MAI?.TENKM ?? "Không có")
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between py-3">
                    <a href="@Url.Action("Index")" class="btn btn-secondary shadow-sm">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <div>
                        <a href="@Url.Action("Edit", new { id = Model.MATT })" class="btn btn-warning shadow-sm me-2">
                            <i class="fas fa-edit me-1"></i> Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>