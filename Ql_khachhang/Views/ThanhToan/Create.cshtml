@model THANHTOAN.Models.THANH_TOAN

@{
    ViewBag.Title = "Thêm thanh toán mới";
}

<div class="row justify-content-start">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-plus-circle me-2"></i> LẬP HÓA ĐƠN THANH TOÁN MỚI
                </h5>
            </div>

            <div class="card-body bg-white p-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        @Html.Partial("Form")
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end align-items-center">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2 px-4">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-success px-5 fw-bold shadow-sm">
                            <i class="fas fa-save me-1"></i> Lưu thanh toán
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>